  },
  {
    "id": 130609,
    "uid": "line-49-100",
    "chapter": "卷四十九",
    "chapternum": 49,
    "charstyle": "近體詩",
    "linenum": 100,
    "type": "内容",
    "linetype": "content",
    "content": "郡樓乗曉上盡日不能迴晩色將秋至長風送月來",
    "author": "韓愈"
  },
  {
    "id": 130610,
    "uid": "line-49-101",
    "chapter": "卷四十九",
    "chapternum": 49,
    "charstyle": "近體詩",
    "linenum": 101,
    "type": "标题",
    "linetype": "title",
    "content": "贈同遊",
